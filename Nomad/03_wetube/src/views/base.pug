doctype html
html(lang="ko")
  include partials/headtag.pug
  body
    header
      if fakeUser.loggedIn
        small Hello, #{fakeUser.username}
      nav
        ul
          if fakeUser.loggedIn
            li
              a(href="/logout") Log out
          else 
            li
              a(href="/login") Login
      h1=pageTitle
    main
      block content
    include partials/footer.pug